            ----------------------*/
        if _shutter-out-diag-2
            +class('hvr--shutter-out-diag-2')
                &:before
                    top 50%
                    bottom 50%
                    left -35%
                    right -35%
                    transform rotate(-45deg)
            +class('hvr--shutter-out-diag-2')
                &:hover:before
                    top -35%
                    bottom -35%
    
    /*! # Shutter in 
        ----------------------*/
    if _shutter-in
        [class*='hvr--shutter-in-']:after
        [class*='hvr--shutter-in-']:before
            background _background
            position absolute
            content ''
        [class*='hvr--shutter-in-']:after
            top 0
            left 0
        [class*='hvr--shutter-in-']:before
            right 0
            bottom 0
