        if _shutter-out-horiz
            +class('hvr--shutter-out-horiz')
                &:before
                    left 50%
                    right 50%
                    top 0
                    bottom 0
            +class('hvr--shutter-out-horiz')
                &:hover:before
                    left 0
                    right 0
        
        /*! hvr--sutter-out-horiz 
            ----------------------*/
        if _shutter-out-vert
            +class('hvr--shutter-out-vert')
                &:before
                    top 50%
                    bottom 50%
                    left 0
                    right 0
            +class('hvr--shutter-out-vert')
                &:hover:before
                    top 0
                    bottom 0
        
        /*! hvr--sutter-out-diag-1 
