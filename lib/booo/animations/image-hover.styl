        if _shutter-out-diag-1
            +class('hvr--shutter-out-diag-1')
                &:before
                    top 50%
                    bottom 50%
                    left -35%
                    right -35%
                    transform rotate(45deg)
            +class('hvr--shutter-out-diag-1')
                &:hover:before
                    top -35%
                    bottom -35%
        
