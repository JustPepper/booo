                    height 200%
                    transition all 0.6s ease
                    opacity 0.75
            +class('hvr--shutter-in-out-diag-2')
                &:after
                    transform skew(45deg) translateX(-100%)
                &:before
                    transform skew(45deg) translateX(100%)
            +class('hvr--shutter-in-out-diag-2')
                &:hover
                    &:after
                        transform skew(45deg) translateX(0%)
                    &:before
                        transform skew(45deg) translateX(0%)
                        
