    [class*='hvr--']
        background-color _background
        backface-visibility hidden
        -webkit-backface-visibility hidden
        color _text
        display inline-block /* Make it changeable */
        -moz-osx-font-smoothing grayscale
        margin 0
        max-width 100%
        position relative
        transform translateZ(0)
        overflow hidden
    
    +class('hvr__image')
        vertical-align top
        max-width 100%
    
    +class('hvr__caption')
        background-color _caption-background
        position absolute
        top 0
        bottom 0
        left 0
        right 0
    
    +class('hvr__link')
        position absolute
        top 0
        bottom 0
        left 0
        right 0
    
    [class*='hvr--'],
    [class*='hvr--']:before,
    [class*='hvr--']:after,
    [class*='hvr--'] *,
    [class*='hvr--'] *:before,
    [class*='hvr--'] *:after {
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
      -webkit-transition: all 0.35s ease;
      transition: all 0.35s ease;
    }
    
    /*! # Fade 
        ----------------------*/
    if _fade 
        [class*='hvr--fade'] .hvr__caption
            opacity 0
        
        [class*='hvr--fade']:hover .hvr__image
            opacity 0
        
        [class*='hvr--fade']:hover .hvr__caption
            opacity 1
        
        [class*='hvr--fade']:hover .hvr__image
        [class*='hvr--fade']:hover .hvr__caption
            transform translate(0px, 0px)
        
        
        /*! hvr--fade-in-up 
            ----------------------*/
        if _fade-in-up
            +class('hvr--fade-in-up')
                .hvr__caption
                    transform translate(0px, 15%)
                
        /*! hvr--fade-in-down
            ---------------------- */
        if _fade-in-down    
            +class('hvr--fade-in-down')
                .hvr__caption
                    transform translate(0px, -15%)
        
        /*! hvr--fade-in-left
            ---------------------- */
        if _fade-in-left
            +class('hvr--fade-in-left')
                .hvr__caption
                    transform translate(-15%, 0)
            
        /*! hvr--fade-in-right
            ---------------------- */
        if _fade-in-right
            +class('hvr--fade-in-right')
                .hvr__caption
                    transform translate(15%, 0)
    
    /*! # Push 
        ----------------------*/
    if _push
        [class*='hvr--push-']:hover
            .hvr__caption
                transform translate(0, 0) 
                
        /*! hvr--push-up 
            ---------------------- */
        if _push-up
            +class('hvr--push-up')
                .hvr__caption
                    transform translateY(100%)
            
            +class('hvr--push-up')
                &:hover .hvr__image
                    transform translateY(-100%)
        
        /*! hvr--push-down 
            ---------------------- */
        if _push-down
            +class('hvr--push-down')
                .hvr__caption
                    transform translateY(-100%)
            
            +class('hvr--push-down')
                &:hover .hvr__image
                    transform translateY(100%)
                
        /*! hvr--push-left 
            ---------------------- */
        if _push-left
            +class('hvr--push-left')
                .hvr__caption
                    transform translateX(100%)
            
            +class('hvr--push-left')
                &:hover .hvr__image
                    transform translateX(-100%)
                
        /*! hvr--push-right 
            ---------------------- */
        if _push-right
            +class('hvr--push-right')
                .hvr__caption
                    transform translateX(-100%)
            
            +class('hvr--push-right')
                &:hover .hvr__image
                    transform translateX(100%)
    
    /*! # Slide 
        ----------------------*/
    if _slide
        [class*='hvr--slide-']:hover
            .hvr__caption
                transform translate(0, 0)
                
        /*! hvr--slide-up 
            ---------------------- */
        if _slide-up
            +class('hvr--slide-up')
                .hvr__caption
                    transform translateY(100%)
        
        /*! hvr--slide-down 
            ---------------------- */
        if _slide-down
            +class('hvr--slide-down')
                .hvr__caption
                    transform translateY(-100%)
            
        /*! hvr--slide-left 
            ---------------------- */
        if _slide-left
            +class('hvr--slide-left')
                .hvr__caption
                    transform translateX(100%)
        
        /*! hvr--slide-right 
            ---------------------- */
        if _slide-right
            +class('hvr--slide-right')
                .hvr__caption
                    transform translateX(-100%)
        
        /*! hvr--slide-top-left
            ---------------------- */
        if _slide-top-left
            +class('hvr--slide-top-left')
                .hvr__caption
                    transform translate(-100%, -100%)
        
        /*! hvr--slide-top-right
            ---------------------- */
        if _slide-top-right
            +class('hvr--slide-top-right')
                .hvr__caption
                    transform translate(100%, -100%)
        
        /*! hvr--slide-bottom-left
            ---------------------- */
        if _slide-bottom-left
            +class('hvr--slide-bottom-left')
                .hvr__caption
                    transform translate(-100%, 100%)
        
        /*! hvr--slide-bottom-right
            ---------------------- */
        if _slide-bottom-right
            +class('hvr--slide-bottom-right')
                .hvr__caption
                    transform translate(100%, 100%)
    
    /*! # Reveal 
        ----------------------*/
    if _reveal
        [class*='hvr--reveal-']:before
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            content ''
            background _background
            
        [class*='hvr--reveal-']
            .hvr__caption
                opacity 0
                
        [class*='hvr--reveal-']:hover:before
            transform translate(0, 0)
        
        [class*='hvr--reveal-']:hover .hvr__caption
            opacity 1
            transition-delay 0.21s
            
        /*! hvr--reveal-up 
            ---------------------- */
        if _reveal-up
            +class('hvr--reveal-up')
                &:before
                    transform translateY(100%)
                
        /*! hvr--reveal-down 
            ---------------------- */
        if _reveal-down
            +class('hvr--reveal-down')
                &:before
                    transform translateY(-100%)
            
        /*! hvr--reveal-left 
            ---------------------- */
        if _reveal-left
            +class('hvr--reveal-left')
                &:before
                    transform translateX(100%)
            
        /*! hvr--reveal-right 
            ---------------------- */
        if _reveal-right
            +class('hvr--reveal-right')
                &:before
                    transform translateX(-100%)
        
        /*! hvr--reveal-top-left 
            ---------------------- */
        if _reveal-top-left
            +classs('hvr--reveal-top-left')
                &:before
                    transform translate(-100%, -100%)
        
        /*! hvr--reveal-top-right 
            ---------------------- */
        if _reveal-top-right
            +class('hvr--reveal-top-right')
                &:before
                    transform translate(100%, -100%)
        
        /*! hvr--reveal-top-left 
            ---------------------- */
        if _reveal-bottom-left
            +class('hvr--reveal-bottom-left')
                &:before
                    transform translate(-100%, 100%)
        
        /*! hvr--reveal-bottom-left 
            ---------------------- */
        if _reveal-bottom-right
            +class('hvr--reveal-bottom-right')
                &:before
                    transform translate(100%, 100%)
    
    /*! # Hinge 
        ----------------------*/
    if _hinge
        [class*='hvr--hinge-']
            perspective: 50em
            .hvr__caption
                opacity 0
                z-index 1
            &:hover .hvr__image
                opacity 0
            &:hover .hvr__caption
                opacity 1
                transition-delay 0.21s
        /*! hvr--hinge-up 
            ---------------------- */
        if _hinge-up
            +class('hvr--hinge-up') 
                .hvr__image
                    transform-origin 50% 0%
                .hvr__caption
                    transform rotateX(90deg)
                    transform-origin 50% 100%
                &:hover .hvr__image
                    transform rotateX(-90deg)
                &:hover .hvr__caption
                    transform rotateX(0deg)
                    
        /*! hvr--hinge-down 
            ---------------------- */
        if _hinge-down
            +class('hvr--hinge-down') 
                .hvr__image
                    transform-origin 50% 100%
                .hvr__caption
                    transform rotateX(-90deg)
                    transform-origin 50% -50%
                &:hover .hvr__image
                    transform rotateX(90deg)
                &:hover .hvr__caption
                    transform rotateX(0deg)
        
        /*! hvr--hinge-left 
            ---------------------- */
        if _hinge-left
            +class('hvr--hinge-left')
                .hvr__image
                    transform-origin 0% 50%
                .hvr__caption
                    transform rotateY(-90deg)
                    transform-origin 100% 50%
                &:hover .hvr__image
                    transform rotateY(90deg)
                &:hover .hvr__caption
                    transform rotateY(0deg)
        
        /*! hvr--hinge-right 
            ---------------------- */
        if _hinge-right
            +class('hvr--hinge-right') 
                .hvr__image
                    transform-origin 100% 50%
                .hvr__caption
                    transform rotateY(90deg)
                    transform-origin 0% -50%
                &:hover .hvr__image
                    transform rotateY(-90deg)
                &:hover .hvr__caption
                    transform rotateY(0deg)
    
    /*! # Flip 
        ----------------------*/
    if _flip
        [class*='hvr--flip-']
            perspective 50em
            .hvr__image
                backface-visibility hidden
            .hvr__caption
                opacity 0
            &:hover .hvr__image
                opacity 0
            &:hover .hvr__caption
                opacity 1
                transition-delay 0.13999999999999999s
                
        /*! hvr--flip-horiz 
        ----------------------*/
        if _flip-horiz
            +class('hvr--flip-horiz')
                .hvr__caption
                    transform rotateX(90deg)
                    transform-origin 0% 50%
                &:hover .hvr__image
                    transform rotateX(-180deg)
                &:hover .hvr__caption
                    transform rotateX(0deg)
        
        /*! hvr--flip-vert 
        ----------------------*/
        if _flip-vert
            +class('hvr--flip-vert')
                .hvr__caption
                    transform rotateY(90deg)
                    transform-origin 50% 0%
                &:hover .hvr__image
                    transform rotateY(-180deg)
                &:hover .hvr__caption
                    transform rotateY(0deg)
        
        /*! hvr--flip-diag-1 
        ----------------------*/
        if _flip-diag-1
            +class('hvr--flip-diag-1')
                .hvr__caption
                    transform rotate3d(1, -1, 0, 100deg)
                &:hover .hvr__image
                    transform rotate3d(-1, 1, 0, 100deg)
                &:hover .hvr__caption
                    transform rotate3d(0, 0, 0, 0deg)
        
        /*! hvr--flip-diag-2
        ----------------------*/
        if _flip-diag-2
            +class('hvr--flip-diag-2')
                    transform rotate3d(1, 1, 0, 100deg)
                &:hover .hvr__image
                    transform rotate3d(-1, -1, 0, 100deg)
                &:hover .hvr__caption
                    transform rotate3d(0, 0, 0, 0deg)
    
    /*! # Shutter out 
        ----------------------*/
    if _shutter-out
        [class*='hvr--shutter-out-']:before
            background _background
            position absolute
            content ''
            transition-delay 0.105s
        [class*='hvr--shutter-out-'] .hvr__caption
            opacity 0
            transition-delay 0s
        [class*='hvr--shutter-out-']:hover:before
            transition-delay 0s
        [class*='hvr--shutter-out-']:hover .hvr__caption
            opacity 1
            transition-delay 0.105s
                
        /*! hvr--sutter-out-horiz 
